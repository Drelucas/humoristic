<form action="" class="ls-form row">

<%= form_for(@team, html: { class: "ls-form row" }) do |f| %>
<% if @team.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

  <ul>
    <% @team.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<fieldset>
  <div class="row">
    <div class="col-md-8">
      <label class="ls-label col-md-6">
        <span class="ls-label-text"><%= f.label :name, "Informe um nome para seu Time" %></span>
        <%= f.text_field :name %>
      </label>
    </div>
  </div>

</fieldset>

<div class="ls-box ls-md-space ls-ico-user-add ls-ico-bg">
<h1 class="ls-title ls-color-theme">Adicione usuários ao time</h1>
  <p></p>

  <label class="ls-label col-md-4 col-xs-12">
    <span class="ls-label-text"><%= f.label :name, "Usuários" %></span>
      <%= select(:team, :user_id,
             options_from_collection_for_select(@users, :id, :email),
             {}, 
             multiple: true, class: 'select2'
             ) %>
 </label>
 <p></p>

</div>

<div class="ls-actions-btn">
  <%= f.button  "Salvar", :type => "submit" , class: "ls-btn-primary"%>
  <%= f.submit "Limpar", :type => "reset",  class: "ls-btn-primary" %>
  <%= link_to 'Voltar', teams_path, class: "ls-btn-darker" %>
</div>
<% end %>
</form>
