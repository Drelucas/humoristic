<%= form_for(@user, html: { class: "ls-form row" }) do |f| %>
<fieldset>
  <div class="row">
    <div class="col-md-8">
      <label class="ls-label col-md-6 <%= class_error @user, :name %>">
        <span class="ls-label-text"><%= f.label :name, "Nome" %></span>
        <%= f.text_field :name %>
        <%= show_message_error @user, :name %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 <%= class_error @user, :email %>">
      <label class="ls-label col-md-6">
        <span class="ls-label-text"><%= f.label :email, "Email" %></span>
        <%= f.text_field :email %>
        <%= show_message_error @user, :email %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <label class="ls-label col-md-3 <%= class_error @user, :name %>">
        <span class="ls-label-text"><%= f.label :phone, "Telefone" %></span>
        <%= f.text_field :phone, class: 'ls-mask-phone', placeholder: '(99) 9999-9999' %>
      </label>
    </div>
  </div>

</fieldset>

<div class="ls-actions-btn">
  <%= f.button  "Salvar", :type => "submit" , class: "ls-btn-primary"%>
  <%= f.submit "Limpar", :type => "reset",  class: "ls-btn-primary" %>
  <%= link_to 'Voltar', users_path, class: "ls-btn-darker" %>
</div>
<% end %>
